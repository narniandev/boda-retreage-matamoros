---
interface Props {
  href: string;
  text: string;
  target?: string;
}
const { href, text, target = "_self" } = Astro.props;
---
<a 
  href={href} 
  target={target}
  class="inline-block px-8 py-3 bg-wedding-primary text-white uppercase tracking-widest text-xs font-semibold rounded-sm hover:bg-wedding-secondary transition-colors duration-300"
>
  {text}
</a>