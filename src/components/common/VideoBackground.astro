<div class="absolute inset-0 w-full h-full overflow-hidden pointer-events-none bg-black">
  <video 
    id="hero-video"
    autoplay 
    loop 
    muted 
    playsinline 
    preload="auto"
    poster="https://res.cloudinary.com/cloudinary-autoshn/image/upload/v1764049262/novios_1_jzckfn.webp"
    class="absolute inset-0 w-full h-full object-cover z-0 opacity-0 transition-opacity duration-1000"
  >
    <source src="https://res.cloudinary.com/cloudinary-autoshn/video/upload/v1764049277/bg-boda_cxx3sq.mp4" type="video/mp4" />
  </video>

  <div 
    class="absolute inset-0 w-full h-full bg-cover bg-center z-[-1]"
    style="background-image: url('https://res.cloudinary.com/cloudinary-autoshn/image/upload/v1764049262/novios_1_jzckfn.webp');"
  >
  </div>

  <div class="absolute inset-0 bg-black/40 z-10"></div>
</div>

<script>
  const video = document.getElementById('hero-video') as HTMLVideoElement;

  if (video) {
    video.addEventListener('canplay', () => {
      video.classList.remove('opacity-0');
    });
    
    video.muted = true;
    video.play().catch(() => {
      console.log("Autoplay bloqueado. Se muestra poster.");
    });
  }
</script>